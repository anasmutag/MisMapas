<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/main_padding"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_sitios"
        android:padding="@dimen/size_titulo_sitios"
        android:textSize="@dimen/espacio"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/espacio"
        android:layout_above="@id/glSitios"
        android:gravity="center_horizontal" />
    <GridLayout
        android:id="@+id/glSitios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/ivCarnaval"
            android:layout_width="@dimen/size_opcion"
            android:layout_height="@dimen/size_opcion"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginBottom="@dimen/espacio"
            android:scaleType="centerCrop"
            android:src="@drawable/carnaval_negros_blancos" />
        <ImageView
            android:id="@+id/ivLajas"
            android:layout_width="@dimen/size_opcion"
            android:layout_height="@dimen/size_opcion"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/espacio"
            android:scaleType="centerCrop"
            android:src="@drawable/santuario_las_lajas" />
        <ImageView
            android:id="@+id/ivLaguna"
            android:layout_width="@dimen/size_opcion"
            android:layout_height="@dimen/size_opcion"
            android:layout_row="1"
            android:layout_column="0"
            android:scaleType="centerCrop"
            android:src="@drawable/laguna_cocha" />
        <ImageView
            android:id="@+id/ivMorro"
            android:layout_width="@dimen/size_opcion"
            android:layout_height="@dimen/size_opcion"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/espacio"
            android:scaleType="centerCrop"
            android:src="@drawable/el_morro" />
    </GridLayout>
</RelativeLayout>